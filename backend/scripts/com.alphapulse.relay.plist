<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!-- macOS-specific launchd configuration for AlphaPulse Relay Server -->
<!-- launchd is the macOS service management framework (equivalent to systemd on Linux) -->
<!-- For Linux systems, use systemd service files instead -->
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.alphapulse.relay</string>
    <key>ProgramArguments</key>
    <array>
        <string>/Users/daws/alphapulse/backend/target/release/relay-server</string>
    </array>
    <key>WorkingDirectory</key>
    <string>/Users/daws/alphapulse/backend</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    <key>StandardOutPath</key>
    <string>/Users/daws/alphapulse/backend/logs/relay-server.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/daws/alphapulse/backend/logs/relay-server.error.log</string>
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
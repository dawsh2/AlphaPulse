<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!-- macOS-specific launchd configuration for AlphaPulse Alpaca Exchange Collector -->
<!-- launchd is the macOS service management framework (equivalent to systemd on Linux) -->
<!-- For Linux systems, use systemd service files instead -->
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.alphapulse.exchange-collector-alpaca</string>
    <key>ProgramArguments</key>
    <array>
        <string>/Users/daws/alphapulse/backend/target/release/exchange-collector</string>
    </array>
    <key>EnvironmentVariables</key>
    <dict>
        <key>EXCHANGE_NAME</key>
        <string>alpaca</string>
        <key>RUST_LOG</key>
        <string>info</string>
        <key>ALPACA_API_KEY</key>
        <string>PKIXSPPJ8G7RKBHRNMN2</string>
        <key>ALPACA_API_SECRET</key>
        <string>B5bcj4PhbqLt7daKt7FY1MMP3sAoDrVoCoFWgSR3</string>
    </dict>
    <key>WorkingDirectory</key>
    <string>/Users/daws/alphapulse/backend</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
        <key>NetworkState</key>
        <true/>
    </dict>
    <key>StandardOutPath</key>
    <string>/Users/daws/alphapulse/backend/logs/exchange-collector-alpaca.log</string>
